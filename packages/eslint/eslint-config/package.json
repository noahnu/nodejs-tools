{
    "name": "@noahnu/eslint-config",
    "version": "4.0.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/noahnu/nodejs-tools.git",
        "directory": "packages/eslint/eslint-config"
    },
    "license": "MIT",
    "author": {
        "name": "noahnu",
        "email": "noah@noahnu.com",
        "url": "https://noahnu.com"
    },
    "scripts": {
        "clean": "run workspace:clean \"$(pwd)\"",
        "prepack": "run workspace:build \"$(pwd)\""
    },
    "main": "./src/index.mts",
    "exports": {
        ".": {
            "default": "./src/index.mts"
        },
        "./base": {
            "default": "./src/base/index.mts"
        },
        "./jest": {
            "default": "./src/jest/index.mts"
        }
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public",
        "main": "./lib/index.mjs",
        "types": "./lib/index.d.mts",
        "exports": {
            ".": {
                "types": "./lib/index.d.mts",
                "default": "./lib/index.mjs"
            },
            "./base": {
                "types": "./lib/base/index.d.mts",
                "default": "./lib/base/index.mjs"
            },
            "./jest": {
                "types": "./lib/jest/index.d.mts",
                "default": "./lib/jest/index.mjs"
            }
        }
    },
    "files": [
        "lib"
    ],
    "devDependencies": {
        "@types/debug": "^4.1.12",
        "@types/eslint": "^9.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.1.0",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@typescript-eslint/utils": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-jest": "^29.12.1",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@eslint/js": "^9.39.2",
        "@noahnu/eslint-import-resolver-require": "workspace:^1.0.4",
        "@types/eslint-config-prettier": "^6.11.3",
        "debug": "^4.4.3",
        "eslint-import-resolver-typescript": "^4.4.4",
        "globals": "^17.3.0",
        "typescript-eslint": "^8.54.0"
    },
    "peerDependencies": {
        "@noahnu/eslint-import-resolver-require": "workspace:^1.0.0",
        "@typescript-eslint/eslint-plugin": ">=8.54.0",
        "@typescript-eslint/parser": ">=8.54.0",
        "eslint": ">=9.39.2",
        "eslint-config-prettier": ">=10.1.8",
        "eslint-import-resolver-node": ">=0.3.9",
        "eslint-import-resolver-typescript": ">=4.4.4",
        "eslint-plugin-import-x": ">=4.16.1",
        "eslint-plugin-jest": ">=29.12.1",
        "eslint-plugin-prettier": ">=5.5.5",
        "prettier": ">=3.8.1",
        "typescript": ">=5.9.3"
    }
}
